<div class="container-fluid">
    <form action="/label/create" method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Label Name</label>
          <input type="text"
            class="form-control" required name="name" id="name" aria-describedby="labelName" placeholder="Label Name">
          <small id="labelName" class="form-text text-muted">Enter Label Name</small>
        </div>
        <button type="submit" class="btn btn-primary">Add Label</button>
    </form>
</div>